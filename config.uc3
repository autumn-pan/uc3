DEFINE important_block
{
    SUBSYSTEM not_important_subsystem
    FIELD yummy 
        DEFAULT 128
    DEPENDENCIES
    [
        block
    ]
}

DEFINE block
{
    SUBSYSTEM very_important_subsystem
    FIELD yummy 
        DEFAULT 128
    DEPENDENCIES
    [
        important_block
    ]
}

DEFINE other_block
{
    SUBSYSTEM not_important_subsystem
    FIELD yummy 
        DEFAULT 128
}